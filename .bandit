"""
Production-grade security configuration for Bandit.

Bandit is a security linter for Python that scans for common
security issues.
"""

[tool.bandit]
# Directories to exclude from scanning
exclude_dirs = [
    "/tests/",
    "/test_*.py",
    "/.venv/",
    "/venv/",
    "/build/",
    "/dist/",
    "/.eggs/",
    "/node_modules/"
]

# Test IDs to skip (with justification)
skips = [
    "B101",  # assert_used - OK in tests
    "B601",  # paramiko_calls - Not used
    "B602",  # subprocess_popen_with_shell_equals_true - Verified safe usage
]

# Severity level
severity = "medium"

# Confidence level  
confidence = "medium"

# Additional exclusions
exclude = "/test_*"

# Tests to run (empty = all)
tests = []
